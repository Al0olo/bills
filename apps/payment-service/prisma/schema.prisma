// This is your Prisma schema file for the Payment Service
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/payment-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCESS
  FAILED
}

model PaymentTransaction {
  id                  String        @id @default(uuid()) @db.Uuid
  externalReference   String        @map("external_reference") @db.VarChar(255)
  amount              Decimal       @db.Decimal(10, 2)
  currency            String        @default("USD") @db.VarChar(3)
  status              PaymentStatus
  failureReason       String?       @map("failure_reason") @db.Text
  webhookSent         Boolean       @default(false) @map("webhook_sent")
  webhookRetryCount   Int           @default(0) @map("webhook_retry_count")
  webhookLastAttempt  DateTime?     @map("webhook_last_attempt") @db.Timestamp()
  metadata            Json?         @db.JsonB
  processedAt         DateTime?     @map("processed_at") @db.Timestamp()
  createdAt           DateTime      @default(now()) @map("created_at") @db.Timestamp()
  updatedAt           DateTime      @updatedAt @map("updated_at") @db.Timestamp()

  @@index([externalReference], name: "idx_payment_transactions_external_ref")
  @@index([status], name: "idx_payment_transactions_status")
  @@index([webhookSent], name: "idx_payment_transactions_webhook_sent")
  @@map("payment_transactions")
}

model IdempotencyKey {
  id        String   @id @default(uuid()) @db.Uuid
  key       String   @unique @db.VarChar(255)
  response  Json     @db.JsonB
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp()
  expiresAt DateTime @map("expires_at") @db.Timestamp()

  @@index([key], name: "idx_idempotency_keys_key")
  @@index([expiresAt], name: "idx_idempotency_keys_expires_at")
  @@map("idempotency_keys")
}
